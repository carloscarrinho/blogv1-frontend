<form action="" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input required type="text" name="title" id="title" class="form-control" value="<%= article.title ?? '' %>" />
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea required name="description" id="description" class="form-control"><%= article.description %></textarea>
  </div>

  <div class="form-group">
    <label for="tags">Tags</label>
    <input type="text" name="tags" id="tags" class="form-control" value="<%= article.tags %>" />
  </div>

  <div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control" rows="15"><%= article.markdown %></textarea>
  </div>

  <div class="mb-4">
    <a href="/matrix" class="btn btn-secondary">Cancel</a>
    <% if (article.id) { %>
      <button formaction="/matrix/<%= article.id %>?_method=PUT" type="submit" class="btn btn-primary">Update</button>
      <% } else { %>
        <button formaction="/matrix/new" type="submit" class="btn btn-primary">Save</button>
        <% } %>
  </div>
</form>