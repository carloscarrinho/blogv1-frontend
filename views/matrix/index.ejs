<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('_matrix-head')%>
</head>

<body>
  <main class="container">
    <%- include('./_top-menu') %>
      <%- include('./_sub-menu') %>
        <%- include("_alert-popup") %>
          <table class="table">
            <thead>
              <th scope="col">Title</th>
              <th scope="col">Description</th>
              <th scope="col">Created At</th>
              <th scope="col">Updated At</th>
              <th scope="col">Views</th>
              <th scope="col">Update</th>
              <th scope="col">Delete</th>
            </thead>
            <% if(articles.length) { %>
              <% articles.forEach( article=> { %>
                <tbody>
                  <td>
                    <%= article.title %>
                  </td>
                  <td>
                    <%= article.description %>
                  </td>
                  <td>
                    <%= article.createdAt.toLocaleDateString() %>
                  </td>
                  <td>
                    <%= article.updatedAt ? article.updatedAt.toLocaleDateString() : "" %>
                  </td>
                  <td></td>
                  <td>
                    <form action="/matrix/<%= article.id %>" method="GET" class="d-inline">
                      <button type="submit" class="btn btn-outline-info">Update</button>
                    </form>
                  </td>
                  <td>
                    <form action="/matrix/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </tbody>
                <% }) %>
                  <% } %>
          </table>
  </main>
</body>

</html>